---
layout: base.njk
---

<section class="bg-white">
  <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16 lg:px-6">
      <div class="mx-auto max-w-screen-sm text-center lg:mb-16 mb-8">
          <h2 class="mb-4 text-3xl lg:text-4xl tracking-tight font-extrabold text-gray-600">Our Blog</h2>
      </div>
      <div class="grid gap-8 lg:grid-cols-2">
          {%- for post in collections.post -%}
          <article class="p-6 bg-white rounded-lg border border-gray-200 shadow-md dark:bg-gray-800 dark:border-gray-700">
              <h2 class="mb-2 text-2xl font-bold tracking-tight text-gray-00"><a class="hover:text-indigo-500" href="{{ post.url }}">{{ post.data.title }}</a></h2>
              <p class="mb-5 font-light text-gray-500 dark:text-gray-400">{{ post.data.page.excerpt | markdown | safe }}</p>
              <div class="flex justify-between items-center mt-4">
                  <a href="{{ post.url }}" class="inline-flex items-center font-medium hover:underline text-indigo-500">
                      Read more
                      <svg class="ml-2 w-4 h-4" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
                  </a>
              </div>
          </article>
          {%- endfor -%}
      </div>
  </div>
</section>
